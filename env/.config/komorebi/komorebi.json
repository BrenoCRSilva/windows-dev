{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 4,
  "default_container_padding": 2,
  "mouse_follows_focus": false,
  "border": true,
  "border_width": 3,
  "border_offset": -1,
  "border_style": "System",
  "border_colours": {
    "single": "#eb6f92",
    "stack": "#00a542",
    "monocle": "#ebbcba",
    "unfocused": "#6e6a86"
  },
	"ignore_rules": [
    {
      "kind": "Exe",
      "id": "cs2.exe"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP",
		  "workspace_rules":[
		  {
			"kind": "Exe",
			"id": "wezterm-gui.exe"
		  },
		    {
			"kind": "Exe",
			"id": "WindowsTerminal.exe"
		  },
		    {
			"kind": "Exe",
			"id": "notepad++.exe"
		  },
		]
        },
        {
          "name": "II",
          "layout": "BSP",
		  "workspace_rules":[
		  {
			"kind": "Exe",
			"id": "zen.exe"
		  }
		]
        },
        {
          "name": "III",
          "layout": "BSP",
		  "workspace_rules":[
		  {
			"kind": "Exe",
			"id": "Discord.exe"
		  },
			{
			"kind": "Title",
			"id": "WhatsApp",
			"matching_strategy": "Contains"
		  },
		]
        },
        {
          "name": "IV",
          "layout": "BSP",
		  "workspace_rules":[
		  {
			"kind": "Title",
			"id": "Steam",
			"matching_strategy": "Contains"
		  },
		  {
		    "kind": "Title",
			"id": "Xbox",
			"matching_strategy": "Contains"
		  },
		]
        },
        {
          "name": "V",
          "layout": "BSP",
		  "workspace_rules":[
		  {
			"kind": "Exe",
			"id": "explorer.exe"
		  }
		]
        },
        {
          "name": "VI",
          "layout": "BSP"
        },
        {
          "name": "VII",
          "layout": "BSP"
        }
      ]
    }
  ]
}
